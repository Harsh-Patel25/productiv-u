# Environment Configuration Template
# Copy this file to .env.local, .env.development, .env.production as needed

# Application Configuration
VITE_APP_NAME=ProductivU
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Full-Featured Productivity App

# Network Configuration
VITE_HOST=0.0.0.0
VITE_PORT=8080
VITE_DEV_PORT=5173

# API Configuration (for future use)
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=5000

# Storage Configuration
VITE_STORAGE_PREFIX=productiv_
VITE_BACKUP_ENABLED=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true

# Security Configuration
VITE_CORS_ORIGIN=*
VITE_SECURE_MODE=false

# Performance Configuration
VITE_BUNDLE_SIZE_LIMIT=1000
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true

# Monitoring and Logging
VITE_LOG_LEVEL=info
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=
